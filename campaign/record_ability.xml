<root>
	<windowclass name="ref_ability">
		<frame>recordsheet</frame>
		<placement>
			<size width="350" height="350" />
		</placement>
		<sizelimits>
			<minimum width="300" height="300" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<script file="common/scripts/record_window.lua" />
		<sheetdata>
			<hs name="type" />

			<sub_record_header name="header">
				<class>ability_header</class>
			</sub_record_header>

			<frame_record_content name="contentframe" />
			
			<ft_record name="text">
				<anchored to="contentframe" position="over" />
				<empty textres="ft_empty" hideonreadonly="true" />
			</ft_record>
			<scrollbar_record>
				<target>text</target>
			</scrollbar_record>
			
			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="ability_header">
		<margins control="0,0,0,2" />
		<script file="common/scripts/record_header_simple.lua" />
		<sheetdata>
			<link_record_header name="link">
				<class>ref_ability</class>
			</link_record_header>

			<anchor_record_header_right name="rightanchor" />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name" />
			
			<label_recordtype name="recordtype_label">
				<script>
					function onInit()
						local sList = window.getDatabaseNode().getParent().getName();
						
						local sValue = "";
						if sList == "skilllist" then
							sValue = LibraryData.getSingleDisplayText("skill");
						elseif sList == "proficiencylist" then
							sValue = Interface.getString("ref_type_proficiency");
						elseif sList == "featlist" then
							sValue = LibraryData.getSingleDisplayText("feat");
						elseif sList == "featurelist" then
							sValue = Interface.getString("ref_type_feature");
						elseif sList == "traitlist" then
							sValue = Interface.getString("ref_type_trait");
						end
						
						setValue(sValue);
						
						super.onInit();
					end 
				</script>
			</label_recordtype>
		</sheetdata>
	</windowclass>
</root>
